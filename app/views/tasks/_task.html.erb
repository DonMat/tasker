<div id="<%= dom_id task %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= task.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Done:</strong>
    <%= task.done? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Done at:</strong>
    <%= task.done_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Priority:</strong>
    <%= task.priority %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= task.user.name %>
  </div>
</div>
